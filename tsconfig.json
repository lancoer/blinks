{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "resolveJsonModule": true,

    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": false,
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
